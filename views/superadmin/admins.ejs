<%- include('../partials/layout-start', { title: __('admins'), activePage: 'admins' }) %>

    <div class="page-header">
        <h2><i class="fas fa-user-tie"></i>
            <%= __('admins') %>
        </h2>
        <a href="/superadmin/admins/create" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            <%= __('createAdmin') %>
        </a>
    </div>

    <!-- Search Box -->
    <div class="search-container" style="margin-bottom: 20px;">
        <form action="/superadmin/admins" method="GET" style="display: flex; gap: 10px;">
            <input type="text" name="search" placeholder="<%= __('staffIdSearchPlaceholder') %>"
                value="<%= searchQuery || '' %>"
                style="flex: 1; padding: 10px; border: 1px solid #ddd; border-radius: 4px;">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i>
                <%= __('search') %>
            </button>
            <% if (searchQuery) { %>
                <a href="/superadmin/admins" class="btn btn-outline">
                    <i class="fas fa-times"></i>
                    <%= __('cancel') %>
                </a>
                <% } %>
        </form>
    </div>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>
                        <%= __('staffId') %>
                    </th>
                    <th>
                        <%= __('name') %>
                    </th>
                    <th>
                        <%= __('email') %>
                    </th>
                    <th>
                        <%= __('phone') %>
                    </th>
                    <th>
                        <%= __('myCenter') %>
                    </th>
                    <th>
                        <%= __('actions') %>
                    </th>
                </tr>
            </thead>
            <tbody>
                <% if (admins && admins.length> 0) { %>
                    <% admins.forEach(function(admin) { %>
                        <tr>
                            <td>
                                <span class="badge badge-primary">
                                    <%= admin.staffId || 'N/A' %>
                                </span>
                            </td>
                            <td>
                                <div class="cell-with-icon">
                                    <i class="fas fa-user-tie"></i>
                                    <%= admin.name %>
                                </div>
                            </td>
                            <td>
                                <%= admin.email %>
                            </td>
                            <td>
                                <%= admin.phone || '-' %>
                            </td>
                            <td>
                                <%= admin.center ? admin.center.name : __('notAssigned') %>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/superadmin/admins/<%= admin._id %>/edit" class="btn btn-sm btn-info"
                                        title="<%= __('edit') %>">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="/superadmin/admins/<%= admin._id %>/delete" method="POST"
                                        class="inline-form" onsubmit="return confirm(`<%= __('confirmDelete') %>`)">
                                        <button type="submit" class="btn btn-sm btn-danger" title="<%= __('delete') %>">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center text-muted">
                                        <%= __('noData') %>
                                    </td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/layout-end') %>