<%- include('../partials/layout-start', { title: __('createAdmin'), activePage: 'admins' }) %>

    <div class="page-header">
        <a href="/superadmin/admins" class="btn btn-link">
            <i class="fas fa-arrow-<%= isRTL ? 'right' : 'left' %>"></i>
            <%= __('back') %>
        </a>
    </div>

    <div class="form-card">
        <div class="card-header">
            <h2>
                <%= __('createAdmin') %>
            </h2>
        </div>

        <form action="/superadmin/admins" method="POST" class="form">
            <div class="form-row">
                <div class="form-group">
                    <label for="name">
                        <%= __('name') %> <span class="required">*</span>
                    </label>
                    <input type="text" id="name" name="name" required>
                </div>

                <div class="form-group">
                    <label for="email">
                        <%= __('email') %> <span class="required">*</span>
                    </label>
                    <input type="email" id="email" name="email" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="password">
                        <%= __('password') %> <span class="required">*</span>
                    </label>
                    <input type="password" id="password" name="password" required minlength="6">
                </div>

                <div class="form-group">
                    <label for="phone">
                        <%= __('phone') %>
                    </label>
                    <input type="tel" id="phone" name="phone">
                </div>
            </div>

            <div class="form-group">
                <label for="centerId">
                    <%= __('selectCenter') %>
                </label>
                <select id="centerId" name="centerId">
                    <option value="">
                        <%= __('selectOption') %>
                    </option>
                    <% if (centers && centers.length> 0) { %>
                        <% centers.forEach(function(center) { %>
                            <option value="<%= center._id %>">
                                <%= center.name %>
                            </option>
                            <% }); %>
                                <% } %>
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    <%= __('save') %>
                </button>
                <a href="/superadmin/admins" class="btn btn-outline">
                    <%= __('cancel') %>
                </a>
            </div>
        </form>
    </div>

    <%- include('../partials/layout-end') %>