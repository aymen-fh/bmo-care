<%- include('../partials/layout-start', { title: __('accountManagement') || 'إدارة الحسابات' , activePage: 'account' })
    %>

    <div class="page-header" style="margin-bottom: 2.5rem;">
        <h2><i class="fas fa-users-cog"></i>
            <%= __('accountManagement') %>
        </h2>
    </div>

    <!-- Search Bar -->
    <div class="search-container" style="max-width: 600px; margin: 0 auto 3rem auto; position: relative;">
        <i class="fas fa-search"
            style="position: absolute; left: 1.5rem; top: 50%; transform: translateY(-50%); color: #94a3b8; font-size: 1.2rem; pointer-events: none;"></i>
        <input type="text" id="parentSearchInput"
            placeholder="<%= __('searchPlaceholder') || 'Search by name or email...' %>"
            style="width: 100%; padding: 1rem 1rem 1rem 3.5rem; border-radius: 16px; border: 2px solid #e2e8f0; font-size: 1rem; transition: all 0.3s ease; outline: none; background: #fff;"
            onfocus="this.style.borderColor='#3b82f6'; this.style.boxShadow='0 0 0 4px rgba(59, 130, 246, 0.1)';"
            onblur="this.style.borderColor='#e2e8f0'; this.style.boxShadow='none';">
        <!-- RTL Icon Adjustment script -->
        <script>
            if (document.dir === 'rtl') {
                const icon = document.querySelector('.search-container i');
                const input = document.getElementById('parentSearchInput');
                if (icon) { icon.style.left = 'auto'; icon.style.right = '1.5rem'; }
                if (input) { input.style.padding = '1rem 3.5rem 1rem 1rem'; }
            }
        </script>
    </div>

    <!-- All Parents Section -->
    <div class="modern-cards-container" id="parentsGrid">
        <% if (allParents && allParents.length> 0) { %>
            <% allParents.forEach(function(parent, index) { %>
                <div class="profile-card-modern" data-name="<%= parent.name ? parent.name.toLowerCase() : '' %>"
                    data-email="<%= parent.email ? parent.email.toLowerCase() : '' %>"
                    data-staff-id="<%= parent.staffId ? parent.staffId.toLowerCase() : '' %>">
                    <div class="avatar-wrapper-modern">
                        <div class="avatar-modern">
                            <% if (parent.profilePhoto) { %>
                                <img src="<%= parent.profilePhoto %>" alt="<%= parent.name %>">
                                <% } else { %>
                                    <i class="fas fa-user"></i>
                                    <% } %>
                        </div>
                    </div>

                    <h3 class="profile-name-modern">
                        <%= parent.name %>
                    </h3>

                    <% if (parent.staffId) { %>
                        <div style="margin-bottom: 0.5rem;">
                            <span
                                style="display: inline-flex; align-items: center; gap: 4px; background: #eff6ff; color: #3b82f6; padding: 4px 10px; border-radius: 8px; font-size: 0.8rem; font-weight: 600; border: 1px solid #dbeafe;">
                                <i class="fas fa-id-badge" style="font-size: 0.8em;"></i>
                                <%= parent.staffId %>
                            </span>
                        </div>
                        <% } %>

                            <p class="profile-role-modern">
                                <%= parent.email %>
                            </p>

                            <% if (parent.phone) { %>
                                <div
                                    style="color: #64748b; font-size: 0.9rem; margin-bottom: 1rem; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                                    <i class="fas fa-phone" style="color: #10b981;"></i>
                                    <span style="direction: ltr;">
                                        <%= parent.phone %>
                                    </span>
                                </div>
                                <% } %>

                                    <div class="profile-actions-modern">
                                        <% if (parent.linkedSpecialist) { %>
                                            <% if (parent.linkedSpecialist._id.toString()===currentSpecialistId) { %>
                                                <!-- Linked to Me -->
                                                <!-- View Details Button -->
                                                <a href="/specialist/parents/<%= parent._id %>"
                                                    class="btn-modern btn-primary">
                                                    <i class="fas fa-eye"></i>
                                                    <%= __('viewDetails') %>
                                                </a>

                                                <form action="/specialist/parents/<%= parent._id %>/unlink"
                                                    method="POST"
                                                    onsubmit="return confirm('<%= __('confirmUnlinkParent') %>')">
                                                    <button type="submit" class="btn-modern btn-unlink">
                                                        <i class="fas fa-unlink"></i>
                                                        <%= __('unlink') %>
                                                    </button>
                                                </form>
                                                <% } else { %>
                                                    <!-- Linked to Others -->
                                                    <div class="status-badge-modern warning">
                                                        <i class="fas fa-user-lock"></i>
                                                        <%= __('linkedTo') %>: <%= parent.linkedSpecialist.name %>
                                                    </div>
                                                    <% } %>
                                                        <% } else { %>
                                                            <!-- Not Linked -->
                                                            <form action="/specialist/account/link/<%= parent._id %>"
                                                                method="POST">
                                                                <button type="submit" class="btn-modern btn-add">
                                                                    <i class="fas fa-user-plus"></i>
                                                                    <%= __('link') || 'ADD USER' %>
                                                                </button>
                                                            </form>
                                                            <% } %>
                                    </div>
                </div>
                <% }); %>
                    <% } else { %>
                        <div class="empty-state-modern">
                            <i class="fas fa-users"></i>
                            <h3>
                                <%= __('noParentsFound') %>
                            </h3>
                        </div>
                        <% } %>
    </div>

    <style>
        .modern-cards-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 3rem;
            padding: 2rem 0;
        }


        .profile-card-modern {
            background: #ffffff;
            border-radius: 28px;
            padding: 3rem 2rem 2.5rem;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            border: 1px solid #f1f5f9;
            display: flex;
            flex-direction: column;
        }



        .profile-card-modern:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
        }


        .avatar-wrapper-modern {
            width: 150px;
            height: 150px;
            margin: 0 auto 1.5rem;
            position: relative;
            padding: 0;
            border-radius: 50%;
            background: transparent;
        }

        .profile-card-modern:hover .avatar-wrapper-modern {
            transform: scale(1.05);
        }

        .avatar-modern {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            border: 4px solid #3b82f6;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.2);
        }

        .avatar-modern img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .avatar-modern i {
            font-size: 3.5rem;
            color: #3b82f6;
            opacity: 1;
        }

        .profile-name-modern {
            color: #1e293b;
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0 0 0.5rem 0;
            letter-spacing: -0.5px;
        }

        .profile-role-modern {
            color: #64748b;
            font-size: 0.95rem;
            margin: 0 0 1.5rem 0;
            font-weight: 500;
        }



        .profile-actions-modern {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-top: auto;
        }

        .btn-modern {
            width: 100%;
            padding: 0.9rem;
            border: none;
            border-radius: 16px;
            font-weight: 600;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            text-decoration: none;
            letter-spacing: 0;
            text-transform: none;
        }

        .btn-modern::before {
            display: none;
        }

        .btn-primary {
            background: #3b82f6;
            color: white;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
        }

        .btn-primary:hover {
            background: #2563eb;
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(59, 130, 246, 0.3);
        }

        .btn-add {
            background: #3b82f6;
            color: white;
            box-shadow: none;
            border: none;
        }

        .btn-add:hover {
            background: #2563eb;
            transform: translateY(-2px);
            box-shadow: none;
            border: none;
        }

        .btn-unlink {
            background: #fee2e2;
            color: #ef4444;
            border: none;
        }

        .btn-unlink:hover {
            background: #fecaca;
            color: #dc2626;
            border: none;
        }

        .status-badge-modern {
            padding: 0.875rem 1.25rem;
            border-radius: 14px;
            font-size: 0.875rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.625rem;
            letter-spacing: 0.5px;
        }

        .status-badge-modern.linked {
            background: rgba(16, 185, 129, 0.12);
            color: #6ee7b7;
            border: 1px solid rgba(16, 185, 129, 0.25);
        }

        .status-badge-modern.warning {
            background: rgba(251, 191, 36, 0.12);
            color: #fcd34d;
            border: 1px solid rgba(251, 191, 36, 0.25);
        }

        .empty-state-modern {
            grid-column: 1 / -1;
            text-align: center;
            padding: 4rem 2rem;
            background: transparent;
            border: none;
            box-shadow: none;
        }

        .empty-state-modern i {
            font-size: 4rem;
            color: #94a3b8;
            margin-bottom: 1.5rem;
            opacity: 0.5;
        }

        .empty-state-modern h3 {
            color: #94a3b8;
            font-weight: 500;
            font-size: 1.25rem;
        }

        /* RTL Support */
        [dir="rtl"] .about-section-modern {
            text-align: center;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .modern-cards-container {
                grid-template-columns: 1fr;
                gap: 2rem;
            }

            .profile-card-modern {
                padding: 2.5rem 1.5rem 2rem;
            }
        }
    </style>

    <script>
        document.getElementById('parentSearchInput').addEventListener('input', function (e) {
            const searchTerm = e.target.value.toLowerCase().trim();
            const cards = document.querySelectorAll('.profile-card-modern');
            const emptyState = document.querySelector('.empty-state-modern');
            let hasVisible = false;

            cards.forEach(card => {
                const name = card.getAttribute('data-name');
                const email = card.getAttribute('data-email');
                const staffId = card.getAttribute('data-staff-id') || '';

                if (name.includes(searchTerm) || email.includes(searchTerm) || staffId.includes(searchTerm)) {
                    card.style.display = '';
                    hasVisible = true;
                } else {
                    card.style.display = 'none';
                }
            });

            // Handle empty state visibility if it exists
            if (emptyState) {
                if (!hasVisible && searchTerm !== '') {
                    emptyState.style.display = 'block';
                    // Optional: Update text to say "No results found"
                } else if (hasVisible) {
                    emptyState.style.display = 'none';
                } else if (cards.length === 0) {
                    emptyState.style.display = 'block'; // Original empty state
                }
            }
        });
    </script>

    <%- include('../partials/layout-end') %>