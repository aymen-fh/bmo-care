<%- include('../partials/layout-start', { title: `جلسات الطفل - ${child.name}`, activePage: 'words' }) %>

    <div class="page-container-clean">
        <div class="page-header-clean"
            style="display:flex; align-items:center; justify-content:space-between; gap:1rem;">
            <div>
                <h2 style="margin:0;">
                    إدارة الجلسات والمحتوى للطفل: <strong>
                        <%= child.name %>
                    </strong>
                    <i class="fas fa-layer-group" style="color:#3b82f6;"></i>
                </h2>
                <p class="text-muted" style="margin:0.5rem 0 0;">جميع الجلسات المخصصة لهذا الطفل - يمكنك عرضها وتعديل
                    محتواها أو إعادة تعيينها</p>
            </div>
            <div style="display:flex; gap:0.5rem;">
                <a href="/specialist/words" class="btn-secondary">
                    <i class="fas fa-arrow-right"></i> العودة للأطفال
                </a>
                <a href="/specialist/words/child/<%= child._id %>/sessions/new" class="btn btn-primary">
                    <i class="fas fa-plus"></i> إنشاء جلسة جديدة
                </a>
            </div>
        </div>

        <% if (!sessions || sessions.length===0) { %>
            <!-- Empty State -->
            <div class="content-card" style="text-align:center; padding:4rem 2rem;">
                <i class="fas fa-layer-group"
                    style="font-size: 4rem; color: #cbd5e1; margin-bottom: 1.5rem; display:block;"></i>
                <h3 style="color:#475569; font-size:1.3rem; margin:0 0 0.5rem 0;">لا توجد جلسات بعد</h3>
                <p style="color:#64748b; margin:0 0 1.5rem 0;">ابدأ بإنشاء جلسة جديدة لهذا الطفل</p>
                <a href="/specialist/words/child/<%= child._id %>/sessions/new" class="btn btn-primary">
                    <i class="fas fa-plus"></i> إنشاء جلسة جديدة
                </a>
            </div>
            <% } else { %>
                <!-- Sessions Grid -->
                <div class="sessions-grid">
                    <% sessions.forEach(s=> { %>
                        <div class="session-card">
                            <!-- Card Header -->
                            <div class="session-card-header">
                                <div class="session-number">
                                    <i class="fas fa-hashtag"></i>
                                    <%= s.sessionIndex !=null ? s.sessionIndex : '?' %>
                                </div>
                                <div class="session-status-indicator">
                                    <% if (s.isCompleted) { %>
                                        <span class="status-dot status-completed"></span>
                                        <% } else if (!s.active) { %>
                                            <span class="status-dot status-inactive"></span>
                                            <% } else { %>
                                                <span class="status-dot status-active"></span>
                                                <% } %>
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="session-card-body">
                                <h3 class="session-title">
                                    <%= s.sessionName || 'جلسة بدون اسم' %>
                                </h3>

                                <div class="session-details">
                                    <div class="detail-item">
                                        <i class="fas fa-clock"></i>
                                        <span>
                                            <%= (typeof s.targetDuration==='number' ) ? s.targetDuration + ' دقيقة'
                                                : 'غير محدد' %>
                                        </span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-calendar-alt"></i>
                                        <span>
                                            <%= s.createdAt ? new Date(s.createdAt).toLocaleDateString('ar-SA') : '-' %>
                                        </span>
                                    </div>
                                </div>

                                <!-- Status Badge -->
                                <div class="session-status-badge">
                                    <% if (s.isCompleted) { %>
                                        <span class="status-badge status-completed">
                                            <i class="fas fa-check-circle"></i> منجزة
                                        </span>
                                        <% } else if (!s.active) { %>
                                            <span class="status-badge status-inactive">
                                                <i class="fas fa-pause-circle"></i> معطلة
                                            </span>
                                            <% } else { %>
                                                <span class="status-badge status-active">
                                                    <i class="fas fa-play-circle"></i> قيد التنفيذ
                                                </span>
                                                <% } %>
                                </div>

                                <!-- Content Preview -->
                                <% const totalItems=(s.letters?.length || 0) + (s.words?.length || 0); %>
                                    <% if (totalItems> 0) { %>
                                        <div class="content-preview">
                                            <i class="fas fa-font"></i>
                                            <span>
                                                <%= totalItems %> عنصر (كلمات وحروف)
                                            </span>
                                        </div>
                                        <% } %>
                            </div>

                            <!-- Card Footer - Actions -->
                            <div class="session-card-footer">
                                <a href="/specialist/words?childId=<%= child._id %>&sessionId=<%= s._id %>"
                                    class="card-action-btn view-btn">
                                    <i class="fas fa-eye"></i>
                                    <span>عرض المحتوى</span>
                                </a>

                                <% if (s.isCompleted) { %>
                                    <form method="POST"
                                        action="/specialist/words/child/<%= child._id %>/sessions/<%= s._id %>/reset"
                                        style="display:inline; margin:0; flex:1;"
                                        onsubmit="return confirm('هل أنت متأكد من إعادة تعيين هذه الجلسة؟\n\nسيتم حذف جميع البيانات المرتبطة بها وسيتمكن الطفل من اللعب بها مرة أخرى.')">
                                        <button type="submit" class="card-action-btn reset-btn">
                                            <i class="fas fa-redo"></i>
                                            <span>إعادة تعيين</span>
                                        </button>
                                    </form>
                                    <% } %>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } %>
    </div>

    <style>
        .page-container-clean {
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .page-header-clean h2 {
            font-size: 1.8rem;
            font-weight: 800;
            color: #0f172a;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .text-muted {
            color: #64748b;
            font-size: 0.95rem;
        }

        .btn-secondary {
            background: white;
            border: 1px solid #e5e7eb;
            color: #1f2937;
            padding: 0.6rem 1rem;
            border-radius: 8px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: 0.2s;
        }

        .btn-secondary:hover {
            background: #f9fafb;
        }

        .content-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.08);
            padding: 1.5rem;
        }

        /* Sessions Grid Layout */
        .sessions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 1.5rem;
            margin-top: 0.5rem;
        }

        /* Session Card */
        .session-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            display: flex;
            flex-direction: column;
        }

        .session-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px -4px rgba(0, 0, 0, 0.12);
            border-color: #e0f2fe;
        }

        /* Card Header */
        .session-card-header {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            padding: 1rem 1.25rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 2px solid #e2e8f0;
        }

        .session-number {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1.5rem;
            font-weight: 800;
            color: #3b82f6;
        }

        .session-number i {
            font-size: 1rem;
            color: #94a3b8;
        }

        .session-status-indicator {
            display: flex;
            align-items: center;
        }

        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        .status-dot.status-completed {
            background: #16a34a;
            box-shadow: 0 0 0 4px rgba(22, 163, 74, 0.2);
        }

        .status-dot.status-inactive {
            background: #94a3b8;
            box-shadow: 0 0 0 4px rgba(148, 163, 184, 0.2);
            animation: none;
        }

        .status-dot.status-active {
            background: #ea580c;
            box-shadow: 0 0 0 4px rgba(234, 88, 12, 0.2);
        }

        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.6;
            }
        }

        /* Card Body */
        .session-card-body {
            padding: 1.25rem;
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .session-title {
            font-size: 1.15rem;
            font-weight: 700;
            color: #0f172a;
            margin: 0;
            line-height: 1.4;
        }

        .session-details {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #64748b;
            font-size: 0.9rem;
        }

        .detail-item i {
            color: #94a3b8;
            width: 16px;
        }

        .session-status-badge {
            margin-top: auto;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.85rem;
            width: fit-content;
        }

        .status-badge.status-completed {
            background: #dcfce7;
            color: #16a34a;
            border: 1px solid #bbf7d0;
        }

        .status-badge.status-inactive {
            background: #f1f5f9;
            color: #64748b;
            border: 1px solid #e2e8f0;
        }

        .status-badge.status-active {
            background: #fff7ed;
            color: #ea580c;
            border: 1px solid #fed7aa;
        }

        .content-preview {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #475569;
            font-size: 0.9rem;
            padding: 0.5rem;
            background: #f8fafc;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
        }

        .content-preview i {
            color: #3b82f6;
        }

        /* Card Footer */
        .session-card-footer {
            padding: 1rem;
            background: #f8fafc;
            border-top: 1px solid #e2e8f0;
            display: flex;
            gap: 0.5rem;
        }

        .card-action-btn {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.7rem 1rem;
            border-radius: 8px;
            border: 2px solid;
            font-weight: 600;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            font-family: inherit;
        }

        .view-btn {
            background: white;
            color: #3b82f6;
            border-color: #bfdbfe;
        }

        .view-btn:hover {
            background: #3b82f6;
            color: white;
            border-color: #3b82f6;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px -2px rgba(59, 130, 246, 0.3);
        }

        .reset-btn {
            background: white;
            color: #d97706;
            border-color: #fde68a;
        }

        .reset-btn:hover {
            background: #d97706;
            color: white;
            border-color: #d97706;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px -2px rgba(217, 119, 6, 0.3);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .page-container-clean {
                padding: 1rem;
            }

            .page-header-clean {
                flex-direction: column;
                align-items: flex-start !important;
            }

            .sessions-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <%- include('../partials/layout-end') %>