            <script>
                // 1. Image Preview Logic
                function previewImage(input) {
                    const preview = document.getElementById('img-preview');
                    const placeholder = document.getElementById('preview-container');

                    if (input.files && input.files[0]) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            preview.src = e.target.result;
                            preview.style.display = 'block';
                            placeholder.style.display = 'none';
                        }
                        reader.readAsDataURL(input.files[0]);
                    }
                }

                // 2. Text to Speech Logic (Browser Native)
                function speakWord(text) {
                    if ('speechSynthesis' in window) {
                        const utterance = new SpeechSynthesisUtterance(text);
                        utterance.lang = 'ar-SA'; // Set to Arabic
                        window.speechSynthesis.speak(utterance);
                    } else {
                        alert("Browser does not support Text-to-Speech");
                    }
                }

                // 3. Simple Client Side Filter
                function filterClientSide() {
                    const input = document.getElementById('searchInput');
                    const filter = input.value.toUpperCase();
                    const grid = document.getElementById('wordsGrid');
                    const cards = grid.getElementsByClassName('word-card');

                    for (let i = 0; i < cards.length; i++) {
                        const txtValue = cards[i].getAttribute('data-text');
                        if (txtValue.toUpperCase().indexOf(filter) > -1) {
                            cards[i].style.display = "";
                        } else {
                            cards[i].style.display = "none";
                        }
                    }
                }
            </script>

