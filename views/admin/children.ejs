<%- include('../partials/layout-start', { title: __('myChildren'), activePage: 'children' }) %>

    <div class="page-header">
        <h2><i class="fas fa-child"></i>
            <%= __('myChildren') %>
        </h2>
    </div>

    <div class="cards-grid">
        <% if (children && children.length> 0) { %>
            <% children.forEach(function(child) { %>
                <div class="child-card">
                    <div class="child-avatar <%= child.gender === 'male' ? 'male' : 'female' %>">
                        <i class="fas fa-child"></i>
                    </div>
                    <div class="child-info">
                        <h3>
                            <%= child.name %>
                        </h3>
                        <p><i class="fas fa-birthday-cake"></i>
                            <%= child.age %> سنوات
                        </p>
                        <p><i class="fas fa-user"></i>
                            <%= child.parent ? child.parent.name : '-' %>
                        </p>
                    </div>
                    <div class="child-stats">
                        <span
                            class="badge badge-<%= child.difficultyLevel === 'beginner' ? 'success' : child.difficultyLevel === 'intermediate' ? 'warning' : 'danger' %>">
                            <%= child.difficultyLevel==='beginner' ? 'مبتدئ' : child.difficultyLevel==='intermediate'
                                ? 'متوسط' : 'متقدم' %>
                        </span>
                    </div>
                </div>
                <% }); %>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-child"></i>
                            <p>
                                <%= __('noData') %>
                            </p>
                        </div>
                        <% } %>
    </div>

    <%- include('../partials/layout-end') %>